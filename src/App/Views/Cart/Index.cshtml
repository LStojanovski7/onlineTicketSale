 @model IEnumerable<Entities.Tickets>

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h1>Cart</h1>
    <a class="btn btn-info" style="margin-left: 5px; margin-right: 5px;" asp-controller="Cart" asp-action="Checkout">Checkout</a>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ValidTo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValidTo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                    MKD
                </td>
                <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                    <a class="btn btn-info" style="margin-left: 5px; margin-right: 5px;" asp-controller="Cart" asp-action="Remove" asp-route-id="@item.TicketID">Remove</a>
                    }
                </td>
            </tr>
            }
        </tbody>
    </table> 
